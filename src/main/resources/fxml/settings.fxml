<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.fly.ui.controller.SettingsController">

    <stylesheets>
        <String fx:value="/css/settings.css"/>
    </stylesheets>

    <GridPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0">
        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="80"/>
        </columnConstraints>

        <Label text="Нименование клиента"/>
        <TextField fx:id="clientName" GridPane.columnIndex="1" />

        <Label text="Контактный телефон" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="clientPhone" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Е-mail" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="toEmail" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    </GridPane>
</AnchorPane>